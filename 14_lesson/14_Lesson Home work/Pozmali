# My Dictionary Program

dictionary = {
    'hello': 'salam',
    'apple': 'alma',
    'lemon': 'limon',
    'cat': 'pisik',
    'dog': 'it',
    'Flag': 'baydak',
    'student': 'okuwcy',
    'family': 'masgala',
    'pen': 'ruçka',
    'water': 'suw',
    'bread': 'görek'
}

def show_words():
    print("\n*****My Dictionary*****")
    if not dictionary:
        print("The dictionary is empty.")
    else:
        for word, translation in dictionary.items():
            print(f"{word} - {translation}")

def add_word():
    english_word = input("Enter the word in English: ").strip()
    turkmen_word = input(f"Enter the word in Türkmen for '{english_word}': ").strip()
    if english_word and turkmen_word:
        dictionary[english_word] = turkmen_word
        print("Added successfully!")
    else:
        print("Invalid input. Please try again.")

def edit_word():
    english_word = input("Enter the word in English to edit: ").strip()
    if english_word in dictionary:
        turkmen_word = input(f"Enter the new word in Türkmen for '{english_word}': ").strip()
        if turkmen_word:
            dictionary[english_word] = turkmen_word
            print("Edited successfully!")
        else:
            print("Invalid input. Please try again.")
    else:
        print("Word not found in the dictionary.")

def delete_word():
    english_word = input("Enter the word in English to delete: ").strip()
    if english_word in dictionary:
        del dictionary[english_word]
        print("Deleted successfully!")
    else:
        print("Word not found in the dictionary.")

def main():
    while True:
        print("\n*****My Dictionary Program*****")
        print("1. Show")
        print("2. Add")
        print("3. Edit")
        print("4. Delete")
        print("5. Exit")
        choice = input("Your choice? ").strip()

        if choice == '1':
            show_words()
        elif choice == '2':
            add_word()
        elif choice == '3':
            edit_word()
        elif choice == '4':
            delete_word()
        elif choice == '5':
            print("Thanks for using the program. Goodbye!")
            break
        else:
            print("Invalid choice. Please select a valid option.")

if __name__ == "__main__":
    main()
